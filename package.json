{
  "name": "game-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "18.12.1",
    "npm": "8.19.2"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.3",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@types/react-router-dom": "^5.1.7",
    "formik": "^2.2.9",
    "lodash": "^4.17.21",
    "msw": "^0.48.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^5.3.0",
    "react-scripts": "5.0.1",
    "sass": "^1.56.1",
    "typescript": "^4.8.4",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "npm run test -- --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix src/",
    "format": "prettier --write \"src/**/*.+(js|jsx|json|css|md|ts|tsx|scss)\"",
    "eject": "react-scripts eject"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": "eslint --fix src/",
    "*.+(json|css|md)": "prettier --write src/"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns" : [
      "<rootDir>/src/tests/testUtils/testingLibraryUtils.tsx",
      "<rootDir>/src/tests/mocks/handlers.ts",
      "<rootDir>/src/tests/mocks/server.ts"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/lodash": "^4.14.188",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1"
  }
}
